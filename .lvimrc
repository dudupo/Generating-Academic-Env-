function! g:WNote(note)
  let l:_note =  a:note
  let l:_name = input('Enter note title: ')
  let _note = substitute(_note, '\', '\\', 'g')
  execute ':!echo -en ' . _note . '   > /home/davidponar/workspace/DBnotes/' . _name  
  return 0
endfunction 

